{
  "name": "github-analytics-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "author": "777abhi <777abhi@users.noreply.github.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/777abhi/cii-insights.git"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.githubanalytics.app",
    "productName": "GitHub Analytics",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "client-build/**/*",
      "server-build/**/*"
    ],
    "asarUnpack": [
      "server-build/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
