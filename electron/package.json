{
  "name": "github-analytics-desktop",
  "version": "1.1.1",
  "main": "dist/main.js",
  "author": "777abhi <777abhi@users.noreply.github.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/777abhi/cii-insights.git"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "build": "tsc",
    "prepare-build": "node dist/prepare-build.js"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^25.0.9",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.githubanalytics.app",
    "productName": "GitHub Analytics",
    "directories": {
      "output": "dist-build"
    },
    "files": [
      "dist/main.js",
      "package.json",
      "client-build/**/*",
      "server-build/**/*"
    ],
    "asarUnpack": [
      "server-build/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
